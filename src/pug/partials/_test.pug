mixin header(param)
	<header class="header">
		<div class="header__wrapper">
			<h1 class="header__logo"><span class="header__title">Персональный тренер по пилатесу Ирина Олейниченко</span> 
			<img src="img/logo.png" width="200" height="60" alt="Пилатес">
			</h1>		
			<nav class="main-nav main-nav--closed main-nav--nojs">
				<button type="button" class="hamburger"></button>
				<div class="main-nav__wrapper">
				- 
					var menulist = [
						{name: "Главная", link: "index.html"},
						{name: "О тренере", link: "trainer.html"},
						{name: "Услуги", link: "services.html"},
						{name: "Статьи", link: "articles.html"}
						];
				ul.menu-main.menu-main--header
					each item, index in menulist
						if index == param
							li.menu-main__item
								|
								a.menu-main__link.menu-main__link--active= item.name
						else
							li.menu-main__item
								a(href=item.link).menu-main__link= item.name
				</div>
			</nav>
		</div>
	</header>